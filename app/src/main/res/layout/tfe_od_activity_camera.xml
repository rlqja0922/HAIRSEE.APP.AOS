    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/camhor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/camhor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/camver1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.72"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/camver2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/camver3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/camver4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="@id/guideline"
        app:layout_constraintBottom_toBottomOf="parent"></FrameLayout>

    <ImageView
        android:id="@+id/fab_switchcam"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="start|bottom"
        android:background="#FFFFFF"
        android:src="@drawable/camswitch"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toTopOf="@+id/camhor2"
        app:layout_constraintLeft_toRightOf="@+id/camver1"
        app:layout_constraintRight_toLeftOf="@+id/camver2"
        app:layout_constraintTop_toBottomOf="@+id/camhor1" />


    <ImageView
        android:id="@+id/fab_cambt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/camhor1"
        app:layout_constraintBottom_toTopOf="@+id/camhor2"
        app:layout_constraintStart_toStartOf="@+id/camver3"
        app:layout_constraintEnd_toEndOf="@+id/camver4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerInside"
        android:src="@drawable/cambt" />

