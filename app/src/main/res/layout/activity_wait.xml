<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".detection.WaitActivity">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/waitGuide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/waitGuide2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/waitGuide3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/waitGuide4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/waitGuide5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/waitGuide1_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/waitGuide1_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"/>
    <ImageView
        android:id="@+id/gif"
        android:layout_width="112dp"
        android:layout_height="112dp"
        app:layout_constraintTop_toTopOf="@+id/waitGuide1"
        app:layout_constraintBottom_toBottomOf="@id/waitGuide2"
        app:layout_constraintStart_toStartOf="@id/waitGuide1_1"
        app:layout_constraintEnd_toEndOf="@id/waitGuide1_2" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/blue"
        android:textSize="24dp"
        android:gravity="center"
        android:text="헤보자의 미용사가\n 머리를 자르고 있습니다..."
        app:layout_constraintTop_toTopOf="@+id/waitGuide2"
        app:layout_constraintBottom_toBottomOf="@id/waitGuide3"
        app:layout_constraintStart_toStartOf="@id/waitGuide1_1"
        app:layout_constraintEnd_toEndOf="@id/waitGuide1_2"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/waitback"
        app:layout_constraintTop_toTopOf="@+id/waitGuide4"
        app:layout_constraintBottom_toBottomOf="@id/waitGuide5"
        app:layout_constraintStart_toStartOf="@id/waitGuide1_1"
        app:layout_constraintEnd_toEndOf="@id/waitGuide1_2"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/blue"
        android:textSize="15dp"
        android:gravity="center"
        android:text="앱을 백그라운드로 전환해도 측정이 진행됩니다.\n측정이 끝나면 알림으로 알려드릴게요!"
        app:layout_constraintTop_toTopOf="@+id/waitGuide4"
        app:layout_constraintBottom_toBottomOf="@id/waitGuide5"
        app:layout_constraintStart_toStartOf="@id/waitGuide1_1"
        app:layout_constraintEnd_toEndOf="@id/waitGuide1_2"/>
</androidx.constraintlayout.widget.ConstraintLayout>